# ZeroMaps RPC 统一管理面板 Caddy配置

{DOMAIN} {
    # 静态管理面板
    root * /opt/zeromaps-rpc/public
    file_server
    
    # 使用certbot获取的证书
    tls /etc/letsencrypt/live/{DOMAIN}/fullchain.pem /etc/letsencrypt/live/{DOMAIN}/privkey.pem
    
    # 日志
    log {
        output file /var/log/caddy/zeromaps-rpc.log
    }
}

